@model Projet_mvc.Models.Listing.ListingFormViewModel

<div class="form-group">
    <label asp-for="Title"></label>
    <input asp-for="Title" class="form-control" />
    <span asp-validation-for="Title" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Description"></label>
    <textarea asp-for="Description" class="form-control"></textarea>
    <span asp-validation-for="Description" class="text-danger"></span>
</div>

<div class="form-group">
    <label asp-for="Price"></label>
    <input asp-for="Price" class="form-control" type="number" step="0.01" />
    <span asp-validation-for="Price" class="text-danger"></span>
</div>

<div class="container">
    <label asp-for="SelectedTagIds" class="form-label">Ajouter des tags</label>
    @if (Model.AvailableTags != null && Model.AvailableTags.Any())
    {
        <div class="d-flex flex-wrap gap-2 justify-content-around">
            @foreach (var tag in Model.AvailableTags)
            {
                <div>
                    <div class="form-check">
                        <input type="checkbox" class="btn-check" autocomplete="off" value="@tag.Value" id="tag_@tag.Value" name="SelectedTagIds" checked="@tag.Selected">
                        <label class="btn btn-outline-primary" for="tag_@tag.Value">@tag.Text</label>
                    </div>
                </div>
            }
        </div>
    }
</div>