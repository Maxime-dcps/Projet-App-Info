@using Projet_mvc.Models.Listing

@model ListingDetailViewModel
@{
    ViewData["Title"] = Model.ListingData.Title;
    // @inject IFavoriteService FavoriteService
    // var isFavorite = User.Identity.IsAuthenticated && await FavoriteService.IsFavoriteAsync(User.GetUserId(), Model.Id);
}

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm rounded overflow-hidden">
                @if (Model.Images.Any())
                {
                    <div id="listingImageCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @foreach (var image in Model.Images.Select((value, key) => new { key, value }))
                            {
                                <div class="carousel-item @(image.key == 0 ? "active" : "")">
                                    <img src="@image.value.FilePath" class="d-block w-100" alt="@image.value.AltText"
                                         style="height: 450px; object-fit: contain; background-color: #f8f9fa;">
                                </div>
                            }
                        </div>
                        @if (Model.Images.Count > 1)
                        {
                            <button class="carousel-control-prev" type="button" data-bs-target="#listingImageCarousel" data-bs-slide="prev">
                                <span class="carousel-control-prev-icon bg-dark rounded-circle p-1" aria-hidden="true"></span>
                                <span class="visually-hidden">Précédent</span>
                            </button>
                            <button class="carousel-control-next" type="button" data-bs-target="#listingImageCarousel" data-bs-slide="next">
                                <span class="carousel-control-next-icon bg-dark rounded-circle p-1" aria-hidden="true"></span>
                                <span class="visually-hidden">Suivant</span>
                            </button>
                            <div class="carousel-indicators">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    <button type="button" data-bs-target="#listingImageCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"
                                            aria-current="@(i == 0 ? "true" : "false")" aria-label="Image @(i+1)"></button>
                                }
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 450px;">
                        <div class="text-center">
                            <img src="/images/placeholder.png" class="img-fluid" alt="Pas d'image disponible" style="max-height: 300px;">
                            <p class="text-muted mt-3">Aucune image disponible</p>
                        </div>
                    </div>
                }
            </div>
        </div>

        <div class="col-lg-5">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-4">
                        <h1 class="card-title h3 mb-2">@Model.ListingData.Title</h1>
                        <span class="badge bg-primary rounded-pill fs-4 py-2 px-3">@Model.ListingData.Price.ToString("C")</span>
                    </div>

                    @if (!Model.ListingData.IsAvailable)
                    {
                        <div class="alert alert-warning d-flex align-items-center" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            <div>Cet article n'est plus disponible</div>
                        </div>
                    }

                    @if (User.Identity.IsAuthenticated && User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value != Model.ListingData.UserId.ToString())
                    {
                        <form asp-controller="Favorites" asp-action="Toggle" asp-route-listingId="@Model.ListingData.Id" method="post" class="mb-4">
                            <button type="submit" class="btn btn-primary w-100 py-2">
                                <i class="bi bi-heart me-2"></i>Ajouter/Retirer des favoris
                            </button>
                        </form>
                    }

                    <div class="mb-4">
                        <h5 class="border-bottom pb-2 mb-3">Description</h5>
                        <div class="description-box p-3 bg-light rounded" style="max-height: 200px; overflow-y: auto;">
                            <p style="white-space: pre-wrap;">@Model.ListingData.Description</p>
                        </div>
                    </div>

                    @if (Model.Tags.Any())
                    {
                        <div class="mb-4">
                            <h5 class="border-bottom pb-2 mb-3">Tags</h5>
                            <div>
                                @foreach (var tag in Model.Tags)
                                {
                                    <a asp-controller="Listings" asp-action="Index" asp-route-tagId="@tag.Id"
                                       class="badge bg-primary text-white text-decoration-none me-1 mb-1 py-2 px-3">
                                        #@tag.Label
                                    </a>
                                }
                            </div>
                        </div>
                    }

                    <div class="card bg-primary text-white rounded p-3 mb-4">
                        <div class="d-flex align-items-center">
                            <div>
                                <span class="text-white-50">Auteur</span>
                                <h6 class="mb-0 fw-bold">@Model.ListingData.AuthorName</h6>
                            </div>
                        </div>
                    </div>

                    <div class="text-muted small mt-4">
                        <p class="mb-0">Annonce créée le : @Model.ListingData.CreationDate.ToString("dd/MM/yyyy à HH:mm")</p>
                    </div>

                    @if (User.Identity.IsAuthenticated && ((User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value == Model.ListingData.UserId.ToString()) || User.IsInRole("Admin")))
                    {
                        <div class="d-flex gap-2 mt-4 pt-3 border-top">
                            <a asp-controller="Listings" asp-action="Edit" asp-route-id="@Model.ListingData.Id"
                               class="btn btn-primary flex-grow-1">
                                <i class="bi bi-pencil me-2"></i>Modifier
                            </a>
                            <form asp-controller="Listings" asp-action="Delete" asp-route-id="@Model.ListingData.Id"
                                  method="post" class="flex-grow-1"
                                  onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette annonce ?');">
                                <button type="submit" class="btn btn-outline-primary w-100">
                                    <i class="bi bi-trash me-2"></i>Supprimer
                                </button>
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>