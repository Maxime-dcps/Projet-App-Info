<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Projet_mvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Projet_mvc.styles.css" asp-append-version="true" />
    <!-- CSS Bootstrap -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">

    <!-- JS Bootstrap -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

</head>
<body class="bg-creme">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="~/images/Logo.png" alt="Logo" style="height: 80px" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 align-items-center me-auto">       
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Listings" asp-action="Index">Annonces</a>
                        </li>
                        
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Listings" asp-action="Create">Créer une annonce</a>
                            </li>
                        }
                    </ul>


                    <ul class="navbar-nav align-items-center">

                        @if (User.Identity.IsAuthenticated)
                        {                          
                            <li class="nav-item">
                                <span class="nav-link text-dark">Bienvenue, @User.Identity.Name</span>
                            </li>
                            
                            <li class="nav-item">
                                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Logout" method="post">                                   
                                    <button type="submit" class="nav-link btn btn-link-profile">Se déconnecter</button>
                                </form>
                            </li>

                            <liv class=" nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile">
                                    <img src="~/images/user_placeholder.png" alt="Logo" style="height: 50px; border-radius: 50%;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Profil" />
                                </a>
                            </liv>                           
                        }
                        else
                        {                           
                            <li class="nav-item">
                                <form class="form-inline" asp-area="" asp-controller="Account" asp-action="Login" method="post">
                                    <button type="submit" class="nav-link btn btn-link-profile">Se connecter</button>
                                    <img src="~/images/user_placeholder.png" alt="Logo" style="height: 50px; border-radius: 50%;" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Profil" />
                                </form>
                            </li>
                            
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted align-items-center">
        <div class="container ">
            &copy; 2025 - Projet_mvc - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <!--Pour faire fonctionner les tooltips partout dans le projet-->
    <script>
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
